  <div class="nav-desktop-container">
    <a href="/" class="nav-brand">
      <Image src={logoImage} alt="AInTandem Logo" class="nav-brand-logo" width={32} height={32} loading="eager" />
      <span class="nav-brand-text">AInTandem</span>
    </a>

    <div class="nav-desktop-links">
      <div class="nav-desktop-links-list">
        {navLinks.map((link) => (
          <a
            href={link.href}
            data-nav-link={link.href}
            class="nav-link"
            class:active={currentPath === link.href}
          >
            {link.name}
          </a>
        ))}
      </div>

      <div class="nav-divider"></div>

      <div class="nav-social">
        <a href="https://github.com/AInTandem/" target="_blank" rel="noopener noreferrer" class="nav-social-link" aria-label="GitHub">
