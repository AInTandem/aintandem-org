---
import { Image } from 'astro:assets';
import logoImage from '../../public/logo.png';
import { getTranslations, getAllLocales, getLocalizedPath } from '../i18n/utils';
import type { Locale } from 'astro:i18n';

interface Props {
  locale?: Locale;
}

const { locale = 'zh-TW' } = Astro.props;
const translations = getTranslations(locale);
const allLocales = getAllLocales();

const currentPath = Astro.url.pathname;
const basePath = `/${locale}`;

const navLinks = [
  { nameKey: 'allPosts', href: '/blog' },
  { nameKey: 'announcement', href: '/blog/tag/announcement' },
  { nameKey: 'architecture', href: '/blog/tag/architecture' },
  { nameKey: 'thoughts', href: '/blog/tag/thoughts' },
  { nameKey: 'roadmap', href: '/blog/tag/roadmap' },
  { nameKey: 'philosophy', href: '/blog/tag/philosophy' },
  { nameKey: 'home', href: '/' },
];

// Helper to get localized href
function getLocalizedHref(href: string) {
  if (href.startsWith('/#')) {
    return `${basePath}${href}`;
  }
  return getLocalizedPath(locale, href);
}
---

<nav class="nav-blog-desktop">
  <div class="nav-blog-container">
    <a href={getLocalizedHref('/blog')} class="nav-brand">
      <Image src={logoImage} alt="AInTandem Logo" class="nav-brand-logo" width={32} height={32} loading="eager" />
      <span class="nav-brand-text">AInTandem {translations.blog.title}</span>
    </a>

    <div class="nav-blog-links">
      <div class="nav-blog-links-list">
        {navLinks.map((link) => (
          <a
            href={getLocalizedHref(link.href)}
            class="nav-link"
            class:active={currentPath === link.href || currentPath.startsWith(link.href + '/')}
          >
            {link.nameKey === 'allPosts' ? translations.blog.allPosts :
             link.nameKey === 'home' ? translations.nav.home :
             translations.blog.tags[link.nameKey as keyof typeof translations.blog.tags] || link.nameKey}
          </a>
        ))}
      </div>

      <div class="nav-divider"></div>

      <!-- Language Switcher Dropdown -->
      <div class="nav-language-dropdown">
        <button class="nav-language-button" id="blog-language-dropdown-button" aria-expanded="false" aria-haspopup="true">
          <span class="nav-language-current">{allLocales.find(l => l.code === locale)?.name || locale}</span>
          <svg class="nav-language-arrow" width="12" height="12" viewBox="0 0 12 12" fill="none">
            <path d="M2 4L6 8L10 4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
        <div class="nav-language-menu" id="blog-language-dropdown-menu">
          {allLocales.map((loc) => (
            <a
              href={getLocalizedPath(loc.code as Locale, currentPath.replace(basePath, '') || '/')}
              class="nav-language-option"
              class:active={loc.code === locale}
            >
              {loc.name}
            </a>
          ))}
        </div>
      </div>

      <div class="nav-divider"></div>

      <div class="nav-social">
        <a href="https://github.com/AInTandem/" target="_blank" rel="noopener noreferrer" class="nav-social-link" aria-label="GitHub">
          <svg class="nav-social-icon" fill="currentColor" viewBox="0 0 24 24">
